
@{
    ViewData["Title"] = "ThankYou";
    PizzasModel pizza = new PizzasModel();
}

<div class="container  mb-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="thankyou-pizza w-100 wrap">
                <div class="col-6 custom-pizza-image">
                    <img class="custom-image" src=~/images/ThankYou.png alt="Custom Pizza Image" />
                </div>
                <div class="col-6 justify-content-center ">
                <h1 class="mb-5">Thank You for your order!</h1>
                <hr />
                <h3>Your @pizza.PizzaName pizza will be ready for pick up in 30min...</h3>
                </div>
            </div>
        </div>
    </div>

</div>
